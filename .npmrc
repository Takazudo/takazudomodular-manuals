# pnpm configuration

# Use strict peer dependencies (recommended)
strict-peer-dependencies=false

# Auto install peers (for compatibility)
auto-install-peers=true

# Shamefully hoist all dependencies (needed for Next.js and Docusaurus compatibility)
shamefully-hoist=true

# Public hoist pattern for Next.js, React, and types (needed for module resolution)
public-hoist-pattern[]=next*
public-hoist-pattern[]=@next/*
public-hoist-pattern[]=*types*
public-hoist-pattern[]=@types/*
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=@docusaurus/*
