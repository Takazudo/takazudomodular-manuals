{
  "name": "manual-oxi-one-mk2",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "OXI ONE MKII Manual Viewer - Japanese translation with Next.js",
  "author": "Takazudo",
  "keywords": [
    "manual",
    "oxi-one-mkii",
    "synthesizer",
    "next.js",
    "japanese"
  ],
  "scripts": {
    "dev": "pnpm run _kill-port && next dev -p 3100",
    "_kill-port": "lsof -ti:3100 | xargs kill -9 2>/dev/null || true; echo 'Killed processes on port 3100 (if any)'",
    "build": "next build",
    "start": "next start",
    "serve": "cd out && python3 -m http.server 8030",
    "doc:dev": "cd doc && pnpm run start",
    "doc:build": "cd doc && pnpm run build",
    "doc:serve": "cd doc && pnpm run serve",
    "pdf:split": "node scripts/pdf-split.js",
    "pdf:render": "node scripts/pdf-render-pages.js",
    "pdf:extract": "node scripts/pdf-extract-text.js",
    "pdf:translate": "echo 'Translation is handled by Claude Code Task subagents during /pdf-process execution' && exit 1",
    "pdf:validate": "node scripts/check-page-numbers.js",
    "pdf:fix": "node scripts/fix-page-numbers.js",
    "pdf:build": "node scripts/check-page-numbers.js && node scripts/pdf-build.js",
    "pdf:manifest": "node scripts/pdf-manifest.js",
    "pdf:clean": "node scripts/pdf-clean.js",
    "pdf:verify": "node scripts/pdf-verify.js",
    "pdf:all": "run-s pdf:split pdf:render pdf:extract pdf:translate pdf:validate pdf:build pdf:manifest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,mjs,json,css,yml,yaml}\" \"!**/*.{md,mdx}\" \"!node_modules/**\" \"!.next/**\" \"!out/**\" \"!worktrees/**\" \"!__inbox/**\" && pnpm run format:md:check",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,mjs,json,css,yml,yaml}\" \"!**/*.{md,mdx}\" \"!node_modules/**\" \"!.next/**\" \"!out/**\" \"!worktrees/**\" \"!__inbox/**\" && pnpm run format:md",
    "format:md": "node scripts/md-formatter/src/cli.js --write \"**/*.{md,mdx}\"",
    "format:md:check": "node scripts/md-formatter/src/cli.js --check \"**/*.{md,mdx}\"",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:smoke": "node scripts/test-all-pages-fast.js",
    "test:e2e": "playwright test e2e/all-pages.spec.ts",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format",
    "check:fix": "pnpm run lint:fix && pnpm run format:fix",
    "init-worktree": "./scripts/setup-worktree-env.sh",
    "deploy:preview": "netlify deploy --dir=out --site=$NETLIFY_SITE_ID --auth=$NETLIFY_AUTH_TOKEN --alias=preview",
    "deploy:prod": "netlify deploy --dir=out --site=$NETLIFY_SITE_ID --auth=$NETLIFY_AUTH_TOKEN --prod",
    "clean": "rm -rf .next out doc/build doc/.docusaurus",
    "prepare": "husky"
  },
  "dependencies": {
    "@netlify/classnames-template-literals": "^1.0.3",
    "next": "^15.1.6",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "canvas": "^3.2.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "glob": "^10.5.0",
    "husky": "^9.1.7",
    "image-size": "^2.0.2",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "pdf-to-png-converter": "^3.11.0",
    "pdfjs-dist": "^5.4.530",
    "prettier": "^3.2.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "node scripts/md-formatter/src/cli.js --write"
    ],
    "!(worktrees|__inbox)/**/*.{md,mdx}": [
      "node scripts/md-formatter/src/cli.js --write"
    ],
    "*.{json,css,yml,yaml}": [
      "prettier --write"
    ],
    "!(worktrees|__inbox|node_modules)/**/*.{json,css,yml,yaml}": [
      "prettier --write"
    ]
  }
}
